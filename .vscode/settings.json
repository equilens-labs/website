{
  "files.autoSave": "afterDelay",
  "files.autoSaveDelay": 300,
  "editor.formatOnSave": true,
  "editor.wordWrap": "on",
  "git.enableSmartCommit": true,
  "emmet.triggerExpansionOnTab": true,
  "css.lint.unknownAtRules": "ignore",
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[css]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  // Live Preview (Microsoft) — serve from workspace root on port 3000
  "livePreview.port": 3000,
  "livePreview.openPreviewTarget": "Embedded Preview",
  "livePreview.autoRefreshPreview": "On Changes to Saved Files",
  "livePreview.serverRoot": "${workspaceFolder}",
  "livePreview.defaultPreviewPath": "/index.html",
  // Live Server (Ritwick) — fallback if used
  "liveServer.settings.port": 3000,
  "liveServer.settings.root": "/",
  "liveServer.settings.fullReload": true,
  "liveServer.settings.wait": 100,
  // Auto-refresh on change
  "files.watcherExclude": {
    "**/node_modules/**": true,
    "**/.git/**": true
  }
}
