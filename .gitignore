# Evidence: keep committed bundles under output/ops/ (manifests, hashes, logs),
# but ignore any other generated output and bulky screenshot PNGs.
/output/**
!/output/ops/
!/output/ops/**

# Transient CI/local artifacts: uploaded as workflow artifacts, not committed.
output/ops/SCREENSHOTS-*/
output/ops/PLAYWRIGHT-AUDIT-*/

# Ignore bulky screenshot PNGs even inside committed evidence bundles.
output/ops/**/*.png

# Ignore build output
dist/

# Node tooling
node_modules/

# Ignore local server temp files
/tmp/website_server.log
/tmp/website_server.pid

# macOS system files
.DS_Store

# Local Playwright MCP artifacts
.playwright-mcp/

# Lighthouse CI local output
.lighthouseci/
